<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
        <context:property-placeholder location="classpath:musicPlayer.properties"/>
        <bean id="rockMusic"
              class="ru.springapp.springcore.RockMusic"
              scope="prototype"
              factory-method="getRockMusic">
        </bean>
        <bean id="hardBassMusic"
              class="ru.springapp.springcore.HardBass">
        </bean>
        <bean id="classicalMusic"
              class="ru.springapp.springcore.ClassicalMusic"
              factory-method="getClassicalMusic">
        </bean>
        <bean id="musicPlayer"
              class="ru.springapp.springcore.MusicPlayer"
              init-method="InitMetod"
              scope="prototype"
              destroy-method="Destroy">
                <property name="music" ref="classicalMusic"/>
        </bean>
</beans>